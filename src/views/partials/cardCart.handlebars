<div class="cardCart" id={{product._id}}>
  {{!-- {{#if product.thumbnail.length}}
      <img src={{product.thumbnail[0]}} alt={{title}}>
  {{else}} --}}
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRLhZ20NCp7B8aXMv9r7CVxomuhhoPVyT3AcJceeVqmoASVe4m8U6d-mgd0YJWQqfbdfOU&usqp=CAU" alt="no image available">
  {{!-- {{/if}} --}}
  <h3>{{product.title}}</h3>
  <p>Price: $<span class="price">{{product.price}}</span></p>
  {{!-- <p>Quantity: <span class="quantity">{{quantity}}</span></p> --}}
  <p>Quantity: <input type="number" class="quantity" value={{quantity}} name={{_id}}></p>
  <p>Subtotal: $<span class="subTotal"></span></p>
  <button class="delete">Delete</button>
</div>
